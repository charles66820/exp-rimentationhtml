$( "body" ).append('<div class="testbtn">test</div>');
$(".testbtn").on('click', function(e){
    $( "body" ).append('<div class="btn">text</div>');
    $( "body" ).append('<div class="btn">text</div>');

    $(".btn").off( "click", colortext )
    $(".btn").on('click', colortext)
})

function colortext(e){
    $(this).css({color:"red"})
}
